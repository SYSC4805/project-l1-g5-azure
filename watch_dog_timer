int waittimer = 0;
double timeout = 3;  
int timeout2 = 0;

void WDT_Setup (){ 
 timeout2 =(int)( timeout * 227);
 timeout2 = 0x0fff2000 + timeout2; 
 WDT_Enable(WDT,timeout2); 
}       



void setup()
{   
  pinMode(ledOnBoard, OUTPUT); 
  Serial.begin(9600);
}

void loop()
{
 waittimer++;
 if (waittimer > 10) 
 { 
     for(;;); //this is a deadlock
 }

}
